generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// User and Authentication Models
model User {
  id                String      @id @default(cuid())
  clerkId           String      @unique
  email             String      @unique
  firstName         String?
  lastName          String?
  profileImage      String?
  departmentId      String?
  department        Department? @relation("UserDepartment", fields: [departmentId], references: [id])
  roles             Role[]      @relation("UserRoles")
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  auditLogs         AuditLog[]
  blogPosts         BlogPost[]  @relation("BlogAuthor")
  resources         Resource[]  @relation("ResourceUploader")
  departmentHead    Department? @relation("DepartmentHead")
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  permissions String[] // JSON array of permission strings
  users       User[]   @relation("UserRoles")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Content Models
model BlogPost {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  content         String   @db.Text
  excerpt         String?
  featuredImage   String?
  status          String   @default("draft") // draft, pending_review, published, archived
  authorId        String
  author          User     @relation("BlogAuthor", fields: [authorId], references: [id])
  publishedAt     DateTime?
  scheduledFor    DateTime?
  seoTitle        String?
  seoDescription  String?
  seoKeywords     String?
  canonicalUrl    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  versions        ContentVersion[] @relation("BlogPostVersions")
  auditLogs       AuditLog[] @relation("BlogPostAuditLogs")
}

model Resource {
  id              String   @id @default(cuid())
  title           String
  description     String?
  category        String   // yearly_reports, research_papers, etc.
  year            Int?
  fileUrl         String
  fileName        String
  fileSize        Int
  uploaderId      String
  uploader        User     @relation("ResourceUploader", fields: [uploaderId], references: [id])
  status          String   @default("published")
  downloadCount   Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  auditLogs       AuditLog[] @relation("ResourceAuditLogs")
}

model StaffMember {
  id              String   @id @default(cuid())
  name            String
  title           String
  specialization  String
  email           String   @unique
  profileImage    String?
  departmentId    String
  department      Department @relation(fields: [departmentId], references: [id])
  telegram        String?
  twitter         String?
  linkedin        String?
  bio             String?   @db.Text
  status          String   @default("active") // active, inactive
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  auditLogs       AuditLog[] @relation("StaffMemberAuditLogs")
}

model Department {
  id              String   @id @default(cuid())
  name            String   @unique
  slug            String   @unique
  description     String?  @db.Text
  headId          String?  @unique
  head            User?    @relation("DepartmentHead", fields: [headId], references: [id])
  users           User[]   @relation("UserDepartment")
  staffMembers    StaffMember[]
  academicSections AcademicSection[]
  departmentContents DepartmentContent[] @relation("DepartmentContents")
  researchTeams   ResearchTeam[] @relation("DepartmentResearchTeams")
  departmentPublications DepartmentPublication[] @relation("DepartmentPublications")
  departmentEvents DepartmentEvent[] @relation("DepartmentEvents")
  departmentResources DepartmentResource[] @relation("DepartmentResources")
  auditLogs       AuditLog[] @relation("DepartmentAuditLogs")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model DeanMessage {
  id               String   @id @default(cuid())
  title            String
  content          String   @db.Text
  closingMessages  String[] // NEW: Array of closing message bullets
  image            String?
  status           String   @default("draft")
  publishedAt      DateTime?
  scheduledFor     DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  versions         ContentVersion[] @relation("DeanMessageVersions")
  auditLogs        AuditLog[] @relation("DeanMessageAuditLogs")
}

model VisionMission {
  id              String   @id @default(cuid())
  type            String   // vision, mission
  content         String   @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  versions        ContentVersion[] @relation("VisionMissionVersions")
  auditLogs       AuditLog[] @relation("VisionMissionAuditLogs")
}

model BackgroundContent {
  id              String   @id @default(cuid())
  content         String   @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AdministrativePosition {
  id              String   @id @default(cuid())
  title           String
  description     String?  @db.Text
  responsibilities String? @db.Text
  personName      String?
  parentPositionId String?
  parent          AdministrativePosition? @relation("PositionHierarchy", fields: [parentPositionId], references: [id])
  children        AdministrativePosition[] @relation("PositionHierarchy")
  documentUrl     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  auditLogs       AuditLog[] @relation("AdminPositionAuditLogs")
}

model Administrator {
  id                      String   @id @default(cuid())
  positionId              String   @unique
  title                   String
  name                    String?
  imagePath               String?
  accountabilityStatement String?  @db.Text
  duties                  String[] // Array of duty strings
  status                  String   @default("active") // active, inactive
  displayOrder            Int      @default(0)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  auditLogs               AuditLog[] @relation("AdministratorAuditLogs")
}

model AcademicSection {
  id              String   @id @default(cuid())
  name            String
  description     String?  @db.Text
  departmentId    String
  department      Department @relation(fields: [departmentId], references: [id])
  duration        String?
  requirements    String?  @db.Text
  learningOutcomes String? @db.Text
  documentUrl     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  auditLogs       AuditLog[] @relation("AcademicSectionAuditLogs")
}

model Service {
  id              String   @id @default(cuid())
  name            String
  description     String?  @db.Text
  category        String   // academic_support, administrative, library, it, etc.
  contactInfo     String?
  location        String?
  documentUrl     String?
  status          String   @default("active")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  auditLogs       AuditLog[] @relation("ServiceAuditLogs")
}

model AcademicProgram {
  id              String   @id @default(cuid())
  name            String   // e.g., "Undergraduate", "Graduate", "Doctoral"
  level           String   // "BSc", "MSc", "PhD"
  duration        String   // e.g., "4 Years", "2 Years", "3-4 Years"
  description     String?  @db.Text
  subtitle        String?  @db.Text
  features        String[] // Array of feature strings
  status          String   @default("active") // active, inactive
  displayOrder    Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  auditLogs       AuditLog[] @relation("AcademicProgramAuditLogs")
}

model Publication {
  id              String   @id @default(cuid())
  title           String
  description     String?  @db.Text
  category        String   // e.g., "ejst", "conference", "journal", "dissemination"
  content         String?  @db.Text
  externalUrl     String?
  status          String   @default("published") // draft, published, archived
  publishedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  auditLogs       AuditLog[] @relation("PublicationAuditLogs")
}

model ResearchActivity {
  id              String   @id @default(cuid())
  title           String
  description     String?  @db.Text
  category        String   // e.g., "thematic", "collaborative", "conference"
  content         String?  @db.Text
  status          String   @default("published")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  auditLogs       AuditLog[] @relation("ResearchActivityAuditLogs")
}

model Report {
  id              String   @id @default(cuid())
  title           String
  year            Int
  type            String   // "annual", "strategic", "policy"
  description     String?  @db.Text
  fileUrl         String?
  status          String   @default("published")
  publishedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  auditLogs       AuditLog[] @relation("ReportAuditLogs")
}

model SuccessStory {
  id              String   @id @default(cuid())
  title           String
  studentName     String
  graduationYear  Int
  degree          String   // e.g., "BSc Chemistry", "MSc Physics"
  currentPosition String   // Current job/position
  company         String?  // Current company/organization
  story           String   @db.Text
  image           String?
  achievements    String[] // Array of achievement strings
  status          String   @default("published") // draft, published, archived
  featured        Boolean  @default(false)
  displayOrder    Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  auditLogs       AuditLog[] @relation("SuccessStoryAuditLogs")
}

// Supporting Models
model ContentVersion {
  id              String   @id @default(cuid())
  contentType     String   // blog_post, dean_message, vision_mission
  contentId       String
  title           String?
  content         String?  @db.Text
  versionNumber   Int
  createdAt       DateTime @default(now())
  
  // Relations (polymorphic)
  blogPost        BlogPost? @relation("BlogPostVersions", fields: [contentId], references: [id], onDelete: Cascade, map: "ContentVersion_blogPost_fkey")
  deanMessage     DeanMessage? @relation("DeanMessageVersions", fields: [contentId], references: [id], onDelete: Cascade, map: "ContentVersion_deanMessage_fkey")
  visionMission   VisionMission? @relation("VisionMissionVersions", fields: [contentId], references: [id], onDelete: Cascade, map: "ContentVersion_visionMission_fkey")
  
  @@unique([contentId, versionNumber])
}

model AuditLog {
  id              String   @id @default(cuid())
  action          String   // create, update, delete, publish, unpublish
  entityType      String   // blog_post, staff_member, etc.
  entityId        String
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  changes         String?  @db.Text // JSON of what changed
  ipAddress       String?
  userAgent       String?
  createdAt       DateTime @default(now())
  
  // Relations (polymorphic)
  blogPost        BlogPost? @relation("BlogPostAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_blogPost_fkey")
  resource        Resource? @relation("ResourceAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_resource_fkey")
  staffMember     StaffMember? @relation("StaffMemberAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_staffMember_fkey")
  department      Department? @relation("DepartmentAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_department_fkey")
  deanMessage     DeanMessage? @relation("DeanMessageAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_deanMessage_fkey")
  visionMission   VisionMission? @relation("VisionMissionAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_visionMission_fkey")
  adminPosition   AdministrativePosition? @relation("AdminPositionAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_adminPosition_fkey")
  academicSection AcademicSection? @relation("AcademicSectionAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_academicSection_fkey")
  service         Service? @relation("ServiceAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_service_fkey")
  administrator   Administrator? @relation("AdministratorAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_administrator_fkey")
  academicProgram AcademicProgram? @relation("AcademicProgramAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_academicProgram_fkey")
  publication     Publication? @relation("PublicationAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_publication_fkey")
  researchActivity ResearchActivity? @relation("ResearchActivityAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_researchActivity_fkey")
  report          Report? @relation("ReportAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_report_fkey")
  successStory    SuccessStory? @relation("SuccessStoryAuditLogs", fields: [entityId], references: [id], onDelete: Cascade, map: "AuditLog_successStory_fkey")
}

model MediaFile {
  id              String   @id @default(cuid())
  fileName        String
  originalName    String
  mimeType        String
  size            Int
  url             String
  thumbnailUrl    String?
  uploadedBy      String
  usageCount      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Department Content Models
model DepartmentContent {
  id              String   @id @default(cuid())
  departmentId    String
  department      Department @relation("DepartmentContents", fields: [departmentId], references: [id], onDelete: Cascade)
  sectionType     String   // background, vision, mission, general_objectives, specific_objectives, professional_profile, undergraduate_outcomes, postgraduate_objectives, postgraduate_outcomes
  title           String?
  content         String   @db.Text
  displayOrder    Int      @default(0)
  status          String   @default("published") // draft, published
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([departmentId, sectionType])
  @@index([departmentId])
}

model ResearchTeam {
  id              String   @id @default(cuid())
  departmentId    String
  department      Department @relation("DepartmentResearchTeams", fields: [departmentId], references: [id], onDelete: Cascade)
  name            String
  description     String?  @db.Text
  teamLeader      String?
  members         String[] // Array of member names or IDs
  researchArea    String?
  status          String   @default("active") // active, inactive
  displayOrder    Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([departmentId])
}

model DepartmentPublication {
  id              String   @id @default(cuid())
  departmentId    String
  department      Department @relation("DepartmentPublications", fields: [departmentId], references: [id], onDelete: Cascade)
  title           String
  authors         String[] // Array of author names
  year            Int
  publicationType String   // journal, conference, book, thesis
  venue           String?  // Journal name, conference name, etc.
  doi             String?
  url             String?
  abstract        String?  @db.Text
  status          String   @default("published")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([departmentId, year])
}

model DepartmentEvent {
  id              String   @id @default(cuid())
  departmentId    String
  department      Department @relation("DepartmentEvents", fields: [departmentId], references: [id], onDelete: Cascade)
  title           String
  eventType       String   // phd_defense, seminar, presentation, math_camp, workshop, conference
  description     String?  @db.Text
  presenter       String?
  eventDate       DateTime
  location        String?
  imageUrl        String?
  status          String   @default("published")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([departmentId, eventDate])
}

model DepartmentResource {
  id              String   @id @default(cuid())
  departmentId    String
  department      Department @relation("DepartmentResources", fields: [departmentId], references: [id], onDelete: Cascade)
  title           String
  resourceType    String   // lab_photo, classroom_photo, equipment, document
  description     String?  @db.Text
  fileUrl         String
  thumbnailUrl    String?
  displayOrder    Int      @default(0)
  status          String   @default("published")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([departmentId])
}
